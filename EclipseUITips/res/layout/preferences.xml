<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<CheckBoxPreference
        android:key="tip_of_the_day"
		android:summary="Show notification with random guideline every day"
		android:title="Tip of the day"
		android:defaultValue="false"
	/>
	
	<name.raev.kaloyan.android.eclipseuitips.TimePreference
	    android:key="time"
	    android:title="Set time"
	    android:positiveButtonText="@string/set"
	    android:negativeButtonText="@string/cancel"
	    android:dependency="tip_of_the_day"
	/>

</PreferenceScreen>